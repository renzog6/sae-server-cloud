{
  "author": "Renzo O. Gorosito <renzog6@gmail.com>",
  "license": "De Todos",
  "baseUrl": "./src",  
  "paths": {
    "@components/*": [
      "./src/components/*"
    ],
    "@services/*": [
      "/services/*"
    ],
    "@styles/*": [
      "./src/styles/*"
    ]
  },
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
